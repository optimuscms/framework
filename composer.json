{
    "name": "optimuscms/framework",
    "license": "MIT",
    "description": "The OptimusCMS framework.",
    "authors": [
        {
            "name": "Jack Robertson",
            "email": "jack@optixsolutions.co.uk"
        }
    ],
    "require": {
        "laravel/framework": "~5.8.0|^6.0",
        "optix/draftable": "^1.0",
        "optix/media": "^0.2",
        "spatie/eloquent-sortable": "^3.7",
        "spatie/laravel-sluggable": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "orchestra/testbench": "^3.8|^4.0"
    },
    "autoload": {
        "psr-4": {
            "OptimusCMS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OptimusCMS\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
