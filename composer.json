{
    "name": "optimuscms/framework",
    "license": "MIT",
    "description": "The OptimusCMS framework.",
    "authors": [
        {
            "name": "Jack Robertson",
            "email": "jack@optixsolutions.co.uk"
        }
    ],
    "require": {
        "php": "^7.2",
        "laravel/framework": "~5.8.0|^6.0|^7.0",
        "optix/eloquent-draftable": "^2.0",
        "optix/media": "^0.3",
        "spatie/eloquent-sortable": "~3.8.0",
        "spatie/laravel-sluggable": "~2.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "orchestra/testbench": "~3.8.0|^4.0|^5.0"
    },
    "autoload": {
        "psr-4": {
            "OptimusCMS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OptimusCMS\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
